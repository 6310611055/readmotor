<!DOCTYPE html>
<html>
<head>
  <title>Remove Data</title>
</head>
<body>
    <%- include('header.ejs') %>
    <div class="text-center mt-4">
        <h1 style="margin-top: 4rem;">Remove Data</h1>
    </div><br>
    <div class="text-center mt-4">
        <label for="idInput">Enter Data ID:</label>
        <input type="text" id="idInput">
    </div><br>    
    <div class="text-center mt-4">
        <button class="btn btn-primary" onclick="removeData()">Remove</button>
        <a href="/home"><button class="btn btn-danger">Back to home</button></a>
    </div>
    <%- include('footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function removeData() {
        var id = document.getElementById('idInput').value;

        axios.get(`http://192.168.1.101:8000/remove/${id}`)
            .then(function(response) {
            console.log('Response:', response);
            if (response.status === 200) {
                alert('Data removed successfully.');
            } else {
                alert('Failed to remove data.');
            }
            })
            .catch(function(error) {
            console.error('Error:', error);
            });
        }
    </script>
</body>
</html>
